---
export interface Props {
  title: string | null;
  url: string;
  description?: string;
}

const { title, url, description } = Astro.props;
const domain = new URL(url).hostname;
---

<li class="leading-5">
  <a href={url} target="_blank" title={description} class="break-words"
    >{title ?? (url.length > 50 ? url.slice(0, 50) + "..." : url)}</a
  >
  <br />
  <small class="text-gray-500">{domain}</small>
</li>
