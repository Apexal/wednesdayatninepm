---
import type { Person } from 'src/podcast';
export interface Props {
  person: Person
}

const { person } = Astro.props;
---
<article class="border-white">
  {person.imgUrl && <img src={person.imgUrl} alt="" class="float-left mr-4 mt-2 mb-2 rounded w-64">}
  <header class="mb-2">
    <h3 class="text-2xl font-semibold">{person.name}</h3>
    <h4 class="text-lg font-semibold">{person.roles?.join(", ")}</h4>
  </header>
  <p>Coming soon...</p>
</article>