---
import { PEOPLE } from "src/podcast";
import PageLayout from "../layouts/PageLayout.astro";
import Bio from "src/components/Bio.astro";
---

<PageLayout title="About Us">
  <section>
    <header class="mb-4">
      <h1
        class="font-extrabold text-5xl md:text-6xl tracking-tight pt-4 pb-2 overflow-hidden"
      >
        <span
          class="bg-gradient-to-br from-[#fb923c] via-[#f97316] to-[#ea580c] dark:from-primary-main dark:via-primary-main dark:to-primary-main bg-clip-text text-transparent"
        >
          About Us
        </span>
      </h1>
      <p class="text-2xl pb-4">Get to know the hosts</p>
    </header>

    <div class="flex flex-col gap-12">
      <Bio person={PEOPLE.Frank} />
      <Bio person={PEOPLE.Nick} />
      <Bio person={PEOPLE.Aaron} />
    </div>
  </section>
</PageLayout>
